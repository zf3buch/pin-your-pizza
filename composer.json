{
    "name": "zf3buch/pin-your-pizza",
    "description": "Pin Your Pizza! Example Application for the Zend Framework 3",
    "type": "project",
    "homepage": "https://github.com/zf3buch/pin-your-pizza",
    "license": "The MIT License (MIT)",
    "authors": [
        {
            "name": "Ralf Eggert",
            "email": "ralf@travello.de",
            "homepage": "http://www.travello.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "mtymek/expressive-config-manager" : "~0.2",
        "ocramius/proxy-manager": "^1.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-config": "^2.5",
        "zendframework/zend-expressive": "^1.0",
        "zendframework/zend-expressive-helpers": "^2.0",
        "zendframework/zend-expressive-zendrouter": "^1.0",
        "zendframework/zend-expressive-zendviewrenderer": "^1.0",
        "zendframework/zend-servicemanager": "^2.7.3 || ^3.0",
        "zendframework/zend-stdlib": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3",
        "filp/whoops": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "modules/Application/src/",
            "Pizza\\": "modules/Pizza/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApplicationTest\\": "modules/Application/test/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/ public/index.php",
        "test": "phpunit"
    }
}
