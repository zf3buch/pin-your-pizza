{
    "name": "zf3buch/pin-your-pizza",
    "description": "Pin Your Pizza! Example Application for the Zend Framework 3",
    "type": "project",
    "homepage": "https://github.com/zf3buch/pin-your-pizza",
    "license": "The MIT License (MIT)",
    "authors": [
        {
            "name": "Ralf Eggert",
            "email": "ralf@travello.de",
            "homepage": "http://www.travello.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "mtymek/expressive-config-manager" : "~0.2",
        "ocramius/proxy-manager": "^1.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-authentication": "^2.5",
        "zendframework/zend-config": "^2.5",
        "zendframework/zend-db": "^2.5",
        "zendframework/zend-expressive": "~1.0.0@rc || ^1.0",
        "zendframework/zend-expressive-helpers": "^2.0",
        "zendframework/zend-expressive-zendrouter": "^1.0",
        "zendframework/zend-expressive-zendviewrenderer": "^1.0",
        "zendframework/zend-form": "^2.5",
        "zendframework/zend-filter": "^2.5",
        "zendframework/zend-i18n": "^2.5",
        "zendframework/zend-inputfilter": "^2.5",
        "zendframework/zend-permissions-rbac": "^2.5",
        "zendframework/zend-session": "^2.5",
        "zendframework/zend-stdlib": "^2.7",
        "zendframework/zend-servicemanager": "^2.5",
        "zendframework/zend-validator": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3",
        "filp/whoops": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "src/Application/",
            "Bootstrap\\": "modules/Bootstrap/src/",
            "I18n\\": "modules/I18n/src/",
            "Pizza\\": "modules/Pizza/src/",
            "User\\": "modules/User/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApplicationTest\\": "test/ApplicationTest/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/ public/index.php",
        "test": "phpunit"
    }
}
